  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "scripts": {
    "build": "yarn run build:client && yarn run build:server && babel-node ./scripts/buildSitemap && babel-node ./scripts/buildRss",
    "build:client": "yarn run clean:client && NODE_ENV=production yarn run webpack --config ./scripts/webpack.client-prod.js && yarn run copyfiles -f ./public/*.* ./assets",
    "build:server": "yarn run clean:server && NODE_ENV=production yarn run webpack --config ./scripts/webpack.server.js && yarn run babel-node ./scripts/makeFunctionsPackgeJson.js",
    "watch:client": "yarn run webpack server --config scripts/webpack.client-dev.js",
    "watch:server": "NODE_ENV=development babel-node ./devServer.js",
    "analyze": "yarn run clean:client && NODE_ENV=production yarn run webpack --config ./scripts/webpack.client-analyze.js",
    "clean": "run-p clean:client clean:server",
    "clean:client": "yarn run rimraf ./assets && yarn run rimraf ./index.html",
    "clean:server": "yarn run rimraf ./build",
    "firebase:local": "firebase serve --only functions:ritsuko,hosting"
  }
